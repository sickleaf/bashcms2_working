datadir="$optdir/$datadir"		# /opt/blogdata

appdir="$wwwdir/$systemdir"		# /var/www/system_bashcms2/bin
viewdir="$appdir/bsview"		# /var/www/system_bashcms2/bsview
logdir="/var/log/$logname"		# /var/log/bashcms2

