#!/bin/bash -eu

source "$(dirname $0)/conf"
exec 2> "$logdir/$(basename $0).$(date +%Y%m%d_%H%M%S).$$"
gitpwd=$(openssl rsautl -decrypt -inkey /home/radipi/passxem/seckey-wd -in /home/radipi/passxem/cipher-wd)

[ -n "${CONTENT_LENGTH}" ] && dd bs=${CONTENT_LENGTH} > /dev/null

echo -e 'Content-type: text/html\n\n'

cd "$contentsdir"
git pull "https://$contents_owner:$gitpwd@github.com/$contents_owner/$contents"

### CREATE TIMESTAMP FILES IF NOT EXISTS ###
find posts pages -maxdepth 1 -type d |
grep / |
while read d ; do
	[ -f "$contentsdir/$d/main.md" ] &&
	mkdir -p "$datadir/$d" &&
	### ADD TIME FILES ###
	git log -p "$contentsdir/$d/main.md" |
	grep '^Date:' |
	awk '{print $2,$3,$4,$5,$6}' |
	date -f - "+%Y-%m-%d %H:%M:%S" |
	awk -v cf="$datadir/$d/created_time" -v mf="$datadir/$d/modified_time" 'NR==1{print > mf}END{print > cf}'
done
